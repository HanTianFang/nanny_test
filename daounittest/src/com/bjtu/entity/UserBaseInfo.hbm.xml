<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 5.0//EN"  
    "http://www.hibernate.org/dtd/hibernate-mapping-5.0.dtd">  
<hibernate-mapping>
	<!-- 实体类，对应的数据表 -->  
    <class name="com.bjtu.entity.UserBaseInfo" table="UserBaseInfo">
 
       	<id name="user_id" column="user_id"></id>  
   
        <property name="name" column="name"></property>  
        <property name="id_card" column="id_card"></property>  
        <property name="city" column="city"></property>
        <property name="address" column="address"></property>
        <property name="pic_url" column="pic_url"></property>  
        <property name="phoneNumber" column="phoneNumber"></property> 
    </class>  
</hibernate-mapping>  